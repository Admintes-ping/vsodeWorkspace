{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg", //  c/c++类型
            "request": "launch",
            //fileDirname 当前文件所在文件夹绝对路径  fileBasenameNoExtension 当前文件不带后缀的文件名
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe", // "C:\\Windows\\System32\\cmd.exe"要运行的文件
            "args": [],
            "stopAtEntry": false,
            //workspaceFolder 当前workspace文件夹路径   （如D:\cWork）
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "E:\\tool\\mingw64\\bin\\gdb.exe", //gdb程序所在路径，前面的路径就是我们配置环境变量的路径
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "complie" // 调试会话开始前执行的任务，类似于Ant，这里为我们的编译任务
        }
    ]
}